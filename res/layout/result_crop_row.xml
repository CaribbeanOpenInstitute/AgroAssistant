<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:orientation="vertical" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TwoLineListItem android:paddingTop="2dip"
		android:paddingBottom="2dip" android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:mode="twoLine">

		<TextView android:textSize="17sp" 
			android:id="@+id/result_crop_group" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="2dip"
			android:layout_marginTop="6dip" android:text="John"
			android:textColor="#0F0F0F">
		</TextView>
		<TextView android:textSize="17sp"
			android:id="@+id/result_crop_type" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10dip"
			android:layout_marginTop="6dip" android:text="Brown"
			android:textColor="#0F0F0F" android:layout_toRightOf="@id/result_crop_group">
		</TextView>
		<TextView android:textSize="17sp"
			android:id="@+id/result_crop_propertyid" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="2dip"
			android:layout_marginTop="6dip" android:text="10100011" android:ellipsize="marquee"
			android:layout_toRightOf="@id/result_crop_type" android:textColor="#0F0F0F">
		</TextView>

		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/result_crop_area" android:layout_width="wrap_content" android:layout_weight="1"
			android:layout_height="wrap_content" android:layout_below="@id/result_crop_type"
			android:layout_marginLeft="2dip" android:text="district"
			android:layout_marginTop="6dip" android:textColor="#5E5E5E"
			>
		</TextView>

		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/result_crop_count" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_below="@id/result_crop_type"
			android:layout_marginLeft="2dip" android:text="district"
			android:layout_marginTop="6dip" android:textColor="#5E5E5E"
			android:layout_toRightOf="@id/result_crop_area">
		</TextView>

		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/result_crop_date" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_marginLeft="10dip"
			android:layout_marginTop="6dip" android:text="extension"
			android:layout_toRightOf="@id/result_crop_count"
			android:layout_below="@id/result_crop_group" android:textColor="#5E5E5E">
		</TextView>
	</TwoLineListItem>
</LinearLayout> 