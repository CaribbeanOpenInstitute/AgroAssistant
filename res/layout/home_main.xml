<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/bg_main">
    
    <include
    	android:id="@+id/menu_bar" 
    	layout="@layout/home_bar"
    	android:layout_weight="1"
   	/>  
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1" android:layout_gravity="center"
        >
        <Button android:id="@+id/action_farmer"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:onClick="onFarmerClick"
            android:text="@string/btn_home_farmer"
            android:textSize="18sp" 
            android:drawableTop="@drawable/ic_farmer"
            android:background="@null"
            android:layout_gravity="center|left"
            android:layout_marginRight="40dp"/>
        <Button android:id="@+id/action_two_button"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:onClick="onFarmClick"
            android:text="@string/btn_home_farm"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_farm"
            android:background="@null" 
            android:layout_gravity="center|right"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1" android:gravity="center"
        android:layout_gravity="center">
        <Button android:id="@+id/action_three_button"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:onClick="onCropClick"
            android:text="@string/btn_home_crop" 
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_crop"
            android:background="@null"
            android:layout_gravity="center|left"
            android:layout_marginRight="40dp"/>
        <Button android:id="@+id/action_four_button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:onClick="onPriceClick"
            android:text="@string/btn_home_price"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_price"
            android:background="@null"
            android:layout_gravity="center|right"/>
    </LinearLayout>   
</LinearLayout>